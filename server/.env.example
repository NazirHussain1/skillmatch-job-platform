PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/skillmatch?retryWrites=true&w=majority

# JWT Secrets (Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_jwt_secret_key_change_this_in_production_min_32_chars
JWT_EXPIRE=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_this_in_production_min_32_chars
JWT_REFRESH_EXPIRE=7d
JWT_EMAIL_SECRET=your_jwt_email_secret_key_change_this_in_production_min_32_chars
JWT_EMAIL_EXPIRE=1h
COOKIE_EXPIRE=7

# Email Configuration (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@skillmatch.com

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Security
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=7200000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
